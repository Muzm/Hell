{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,

    /* Additional Checks */
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
